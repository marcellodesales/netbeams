<?xml version="1.0"?>
<project name="sonde" default="create-jar" basedir=".">

    <import file="../../../../init-targets.xml"/>
    
    <import file="../jaxb.setup.xml" />
	
    <property name="sonde-package" value="org.netbeams.dsp.ysi" />
	
    <target name="xjc-compile">
        <antcall target="jaxbsetup.xjc-compile">
            <param name="java-src" value="${XML.JAXB}/sonde/java-src" />
            <param name="schema.name" value="sondedata.xsd" />
            <param name="package" value="${sonde-package}" />
        </antcall>
    </target>
	
	<target name="get-properties">
		<antcall target="print-properties" />			
	</target>

    <target name="java-compile" depends="init, xjc-compile">
        <delete dir="${XML.JAXB}/sonde/classes" />
        <mkdir dir="${XML.JAXB}/sonde/classes" />
        <javac srcdir="${XML.JAXB}/sonde/java-src" destdir="${XML.JAXB}/sonde/classes" classpathref="jaxb.classpath" 
        	source="1.5"
		target="1.5"/>
    </target>


    <target name="create-jar" depends="init, java-compile">
        <mkdir dir="${XML.JAXB}/sonde/dist" />
        <jar destfile="${XML.JAXB}/sonde/dist/sonde.jar" basedir="${XML.JAXB}/sonde/classes" />
    </target>

</project>