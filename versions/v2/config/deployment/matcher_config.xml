<?xml version="1.0" encoding="UTF-8"?>
<config>

    <matchRule>
        <ruleid>all_messages_sent_to_weblogger</ruleid>
        
        <matchCriteria>
            <nodeAddress>LOCAL</nodeAddress>
            <componentType>ANY</componentType>
        </matchCriteria>
        
        <matchTarget>
            <nodeAddress>LOCAL</nodeAddress>
            <componentType>org.netbeams.dsp.weblogger
            </componentType>
        </matchTarget>
    </matchRule>

    <matchRule>
        <ruleid>all_messages_sent_to_remote_weblogger</ruleid>
        
        <matchCriteria>
            <nodeAddress>LOCAL</nodeAddress>
            <componentType>ANY</componentType>
        </matchCriteria>
        
        <matchTarget>
            <nodeAddress>192.168.0.121</nodeAddress>
            <componentType>org.netbeams.dsp.weblogger
            </componentType>
        </matchTarget>
    </matchRule>
    
</config>